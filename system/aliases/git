alias g='git'

alias ga='git add'
alias gaa='git add .'

alias gb='git branch'
alias gbd='git branch -d '

alias gc='git commit -v'
alias gcm='git commit -v -m'
alias gca='git commit -v --amend'

alias gco='git checkout'
gcoa() {
  branch=$(git branch | grep $1 | sed 's/ *//g') 
  git checkout $branch
}
alias gcob='git checkout -b'

alias gd='git diff'
alias gdc='git diff --compact-summary'
alias gdstat='git diff --numstat'
alias gs='git status'

alias gf='git fetch'
alias gfa='git fetch --all --prune'

alias gpl='git pull'

alias gp='git push'
alias gpu='git push --set-upstream origin'

alias gm='git merge'

alias grs='git reset'
alias grss='git reset --soft'
alias grsh='git reset --hard'

gl() {
  echo "What kind of log ?"
  echo "\t 1 - stats graph"
  echo "\t 2 - custom"

  read choice

  case $choice in
    1)
    git log --graph --pretty='%Cred%h%Creset -%C(auto)%d%Creset %s %Cgreen(%ar) %C(bold blue)<%an>%Creset' --stat
    ;;
    2)
      git log --graph --pretty='%h %Cred%<(20)%an%Creset %Cgreen%s%Creset'
    ;;
    *)
    exit 1
    ;;
  esac
}
