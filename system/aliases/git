alias g='git'

alias ga='git add'
alias gaa='git add .'

alias gb='git branch | tee'
alias gbd='git branch -d '

alias gc='git commit -v'
alias gcm='git commit -v -m'
alias gca='git commit -v --amend'

alias gco='git checkout'
gcoa() {
  branch=$(git branch | grep $1 | sed 's/ *//g') 
  git checkout $branch
}
alias gcob='git checkout -b'

alias gd='git diff'
alias gdc='git diff --compact-summary'
alias gdstat='git diff --numstat'
alias gs='git status'

alias gst='git stash'
alias gsta='gaa && gs'
alias gstp='git stash pop'

alias gf='git fetch'
alias gfa='git fetch --all --prune'

alias gpl='git pull'

alias gp='git push'
alias gpu='git push --set-upstream origin'
alias gpf='git push --force-with-lease'

alias gm='git merge'

grb() {
	rebase=$(git rebase $1 | sort | sed "s/^\(.*in \)\(.*\)/\1£e[31m\2/g" | tr '£' '\\')
	clear
	echo "\n"
	echo -e $rebase
}
alias grba='git rebase --abort'
alias grbc='git rebase --continue'
alias grbs='git rebase --skip'

alias grs='git reset'
alias grss='git reset --soft'
alias grsh='git reset --hard'

alias grv='git revert'
alias grvc='git revert --continue'
alias grvs='git revert --skip'
alias grva='git revert --abort'
alias grvnc='git revert --no-commit'
grvnch () {
	grvnc $1..HEAD
	gs
}

alias gl='git log'
alias glo='git log --oneline'

alias gwa='git worktree add -b '
alias gwl='git worktree list'
alias gwm='git worktree move'
gwrm() {
	if git worktree remove $1; then
		git worktree prune
	fi
}
